<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pchmn.materialchips.ChipsInput
        android:id="@+id/chips_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:chip_backgroundColor="@color/gold"
        app:chip_deletable="false"
        app:chip_deleteIconColor="@color/colorPrimary"
        app:chip_detailed_backgroundColor="@color/black"
        app:chip_detailed_deleteIconColor="@color/black"
        app:chip_detailed_textColor="@color/white"
        app:chip_hasAvatarIcon="true"
        app:chip_labelColor="@color/bottom_blue"
        app:filterable_list_backgroundColor="@color/black"
        app:filterable_list_textColor="@color/black"
        app:hint="write category"
        app:hintColor="@color/Gray"
        app:maxRows="10"
        app:textColor="@color/white" />
</RelativeLayout>